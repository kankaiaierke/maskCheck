/* pages/result/result.wxss */

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #ffbbd0;
  flex-flow: row;
}

.card-1 {
  position: absolute;
  width: 75%;
  height: 75%;
  background: #f1f9f9;
  border-radius: 20rpx;
}

.card-2 {
  position: absolute;
  bottom: -20rpx;
  width: 105%;
  height: 100%;
  background: rgba(225, 242, 251, 0.9);
  border-radius: 20rpx;
}

.card-3 {
  position: absolute;
  bottom: -20rpx;
  width: 105%;
  height: 100%;
  background: rgba(187, 225, 250, 0.9);
  flex-flow: column;
  border-radius: 20rpx;
}

/* 问卷结果*/

.res-ball {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100%;
  text-align: center;
  line-height: 200rpx;
  font-size: 50rpx;
  color: #fff;
  margin: 0 auto;
}

.great {
  background: #9eea6a;
}

.common {
  background: #e8a400;
}

.danger {
  background: #f00;
}

.res-text {
  margin: 0 30rpx 0 30rpx;
  text-align: center;
  color: #fff;
  padding: 20rpx;
}

.title {
  font-size: 60rpx;
}

.desc {
  text-align: center;
  font-size: 40rpx;
  color:#ffffff;
}
.tip{
  margin-top: 20rpx;
  font-size:40rpx;
  flex-flow: row;
  color:#ffffff;
}
.tip>text{
  margin-right:10rpx;
}